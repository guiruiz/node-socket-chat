{
  "name": "socket-chat",
  "version": "0.0.1",
  "description": "Web chat powered by socket.io",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "express": "^4.16.4",
    "jquery": "^3.4.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "node app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  }
}
